generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DONATION_ACTIVITY_STATUS {
  REQUEST
  APPROVE
  PROGRESS
  READY
  HOLD
  COMPLETED
  DECLINED
  DELETED
}

model DonationHistory {
  id        String                   @id @default(cuid())
  type      DONATION_ACTIVITY_STATUS @default(REQUEST)
  message   String
  requestId String
  deleteAt  DateTime?
  createdAt DateTime                 @default(now())

  @@index([requestId], name: "requestId")
}
