generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ActivityStatus {
  BLOOD_DONATED
  UPDATE_SETTINGS
  PROMOTED
  DEMOTED
  NEW_REQUEST
  NEW_USER
}

model Activity {
  id        String         @id @default(uuid()) @map("_id")
  type      ActivityStatus @default(NEW_REQUEST)
  message   String
  user      String
  deleteAt  DateTime?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}
